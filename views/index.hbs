<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        h1 {
            margin-bottom: 20px;
        }
        .song-card {
            border: 1px solid #ccc;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 6px;
        }
        .song-title {
            font-weight: bold;
            font-size: 18px;
        }
        .song-artist {
            color: #555;
        }
    </style>
</head>
<body>

    <h1>Song List</h1>

    {{! Show message if there are no songs }}
    {{#unless songsList}}
        <p>No songs found.</p>
    {{/unless}}

    {{!-- Loop through songs --}}
    {{#each songsList}}
        <div class="song-card">
            <div class="song-title">{{this.title}}</div>
            <div class="song-artist">{{this.artist}}</div>

            {{#if this.genre}}
                <div>Genre: {{this.genre}}</div>
            {{/if}}

            {{#if this.year}}
                <div>Year: {{this.year}}</div>
            {{/if}}
        </div>
    {{/each}}

</body>
</html>
