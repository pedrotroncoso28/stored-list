<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>

    <style>
        body {
            font-family: "Arial", sans-serif;
            background: linear-gradient(#b30000, #4d0000);
            color: #fff;
            padding: 40px;
            margin: 0;
            overflow-x: hidden;
        }

        h1 {
            text-align: center;
            font-size: 42px;
            margin-bottom: 35px;
            color: #fffbea;
            text-shadow: 0 0 10px gold;
        }

        .song-card {
            background: rgba(255, 255, 255, 0.12);
            border-left: 6px solid gold;
            padding: 15px;
            margin: 20px auto;
            width: 65%;
            border-radius: 12px;
            backdrop-filter: blur(4px);
            box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
            transition: transform 0.25s ease-in-out;
        }

        .song-card:hover {
            transform: scale(1.04);
            box-shadow: 0 0 18px rgba(255, 215, 0, 0.6);
        }

        .song-title {
            font-size: 24px;
            font-weight: bold;
            color: #fff;
        }
        
        .add-form {
            width: 65%;
            margin: 0 auto 40px auto;
            text-align: center;
        }

        .add-input {
            padding: 12px;
            width: 250px;
            border-radius: 10px;
            border: none;
        }

        .add-btn {
            padding: 12px 20px;
            border-radius: 10px;
            background: gold;
            border: none;
            cursor: pointer;
            font-weight: bold;
    }

        /* Snow animation */
        .snowflake {
            position: fixed;
            top: -10px;
            color: white;
            font-size: 18px;
            user-select: none;
            animation: fall linear infinite;
        }

        @keyframes fall {
            to {
                transform: translateY(110vh);
            }
        }
        </style>
</head>
<body>

    <h1>ðŸŽ„ Christmas Song List ðŸŽ„</h1>

    {{!-- Add form --}}
    <div class="add-form">
        <form action="/add" method="POST">
            <input type="text" name="title" placeholder="Add a song..." required class="add-input">
            <button type="submit" class="add-btn">Add</button>
        </form>
    </div>

    {{!-- Snowflakes --}}
    <script>
        const snowContainer = document.body;

        for (let i = 0; i < 35; i++) {
            const snow = document.createElement("div");
            snow.className = "snowflake";
            snow.innerHTML = "â„";

            snow.style.left = Math.random() * 100 + "vw";
            snow.style.animationDuration = 4 + Math.random() * 6 + "s";
            snow.style.opacity = 0.4 + Math.random();

            snowContainer.appendChild(snow);
        }
    </script>

    {{!-- Song list --}}
    {{#each songsList}}
        <div class="song-card">
            <div class="song-title">{{this.title}}</div>

            <form action="/delete/{{this._id}}" method="POST" style="margin-top:10px;">
                <button type="submit" style="
                    padding: 6px 12px;
                    border-radius: 8px;
                    border: none;
                    background: #ff4d4d;
                    color: white;
                    cursor: pointer;
                    font-weight: bold;">
                    Delete
                </button>
            </form>

            <form action="/edit/{{this._id}}" method="GET" style="margin-top:10px;">
                <button type="submit" style="
                    padding: 6px 12px;
                    border-radius: 8px;
                    border: none;
                    background: #ffd700;
                    color: black;
                    cursor: pointer;
                    font-weight: bold;">
                    Edit
                </button>
            </form>
        </div>
    {{/each}}
    </body>
</html>
